{% extends 'basepro.html.twig' %}


{% block body %}
	<div class="container mt-3">
		<h4 class="text-center mb-2">Demande de devis sur nos services</h4>
		{{ form_start(form) }}
		<div class="d-flex justify-content-center">
			<div class="col-5">
				<h6 class="text-center">Selectionner les services qui vous intérresse</h6>
				<div class="mb-3 d-flex justify-content-center">
					{{ form_widget(form.service) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<h6>Information personelle</h6>
				<div class="form-floating mb-3">
					{{ form_widget(form.nameProfessional) }}
					<label for="floatingInput">Entrer votre nom et prénom</label>
				</div>
			</div>
			<div class="col">
				<h6>Information entreprise</h6>
				<div class="form-floating mb-3">
					{{ form_widget(form.city) }}
					<label for="floatingInput">Entrer votre ville</label>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<div class="form-floating mb-3">
					{{ form_widget(form.mail) }}
					<label for="floatingInput">Entrer votre email</label>
				</div>
			</div>
			<div class="col">
				<div class="form-floating mb-3">
					{{ form_widget(form.numero) }}
					<label for="floatingInput">Entrer votre numéro</label>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<div class="col-5">
				<div class="form-floating mb-3">
					{{ form_widget(form.societe) }}
					<label for="floatingInput">Entrer le nom de votre société</label>
				</div>
			</div>
		</div>
		<h6 class="text-center mb-3">Pour un peu mieux vous comprendre</h6>
		<div class="d-flex justify-content-center">
			<div class="col-8">
				<div class="form-floating mb-3">
					{{ form_widget(form.des) }}
					<label for="floatingInput">Préciser votre besoin</label>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn btn-outline-primary">Envoyer votre demande de devis</button>
		</div>
		{{form_end(form)}}</div>
{% endblock %}
