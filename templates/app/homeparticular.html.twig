{% extends "base.html.twig" %}

{% block title %}Bienvenue sur EcoService
{% endblock %}
{% block body %}
	<div id="carouselExampleCaptions" class="carousel carousel-dark slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{ asset('image/carousel/carousel1.jpg') }}" height="500px" width="100%" class="d-block w-100" alt="...">
				<div class="carousel-caption d-none d-md-block" style>
					<h5>Et si vos produits d'hier étaient vos produits de demain ?</h5>
					<p>Veuillez découvir notre large selection de produit éco-responsable.</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset('image/carousel/carousel2.jpg') }}" height="500px" width="100%" class="d-block w-100 opacity-75" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h5>Avez vous besoin d'aide sur notre site ?</h5>
					<p>Veuillez cliquer ici afin d'atteindre notre page FAQ</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset('image/carousel/carousel3.jpg') }}" height="500px" width="100%" class="d-block w-100" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<h5>Une question ?</h5>
					<p>Veuillez cliquer ici afin d'atteindre notre page contact</p>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Précédent</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Suivant</span>
		</button>
	</div>
	<main class="container">
		{% if app.request.get('error') %}
			<div class="alert alert-danger mt-3 text-center">
				<p>Le mot de passe est invalide</p>
				<p>{{ app.request.get('error') }}</p>
			</div>
		{% endif %}
		<section class="d-flex justify-content-center">
			<div class="card mt-3 ms-5 scale-hover" style="width: 18rem;">
				<div class="card-body">
					<p class="title text-center">Produits plastiques</p>
				</div>
				<div class="d-flex justify-content-center">
					<a class="img" href="#"><img class="card-img-top" src="{{ asset('image/homeparticular/plastique.png') }}"/></a>
				</div>
			</div>
			<div class="card mt-3 ms-5 scale-hover" style="width: 18rem;">
				<div class="card-body">
					<p class="title text-center">Produits en verres</p>
				</div>
				<div class="d-flex justify-content-center">
					<a class="img-a mb-2" href="#"><img class="card-img-top" src="{{ asset('image/homeparticular/verre.png') }}"/></a>
				</div>
			</div>
			<div class="card mt-3 ms-5 scale-hover" style="width: 18rem;">
				<div class="card-body">
					<p class="title text-center">Produits en cartons</p>
				</div>
				<div class="d-flex justify-content-center">
					<a class="img-a" href="#"><img class="card-img-top" src="{{ asset('image/homeparticular/carton.png') }}"/></a>
				</div>
			</div>
		</section>
		<section class="row mt-5">
			<div class="col">
				<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
						<button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
					</div>
					<div class="carousel-inner">
						<div class="carousel-item active" data-bs-interval="10000">
							<div class="d-flex justify-content-center mb-3 mt-2">
								{% if products %}
									<img style="heigth:30%;width:30%" src="{{ asset('uploads/' ~ products[0].images[0]) }}" class="d-block" alt="...">
								{% else %}
									<img style="heigth:30%;width:30%" src="{{ asset('image/imgnofound.png') }}" class="d-block" alt="...">
								{% endif %}
							</div>
							<div class="carousel-caption d-none d-md-block">
								<h5>{{ products[0].name }}
									-
									{{ products[0].price }}€</h5>
								<p>{{ product.des[0]|length > 100 ? product.des[0]|slice(0, 100) ~ '...' : product.des[0] }}</p>
							</div>
						</div>
						{% for product in products|slice(1,3) %}
							<div class="carousel-item" data-bs-interval="2000">
								<div class="d-flex justify-content-center mb-3 mt-2">
									{% if product.images %}
										<img style="heigth:30%;width:30%" src="{{ asset('uploads/' ~ product.images[0]) }}" class="d-block" alt="...">
									{% else %}
										<img style="heigth:30%;width:30%" src="{{ asset('image/imgnofound.png') }}" class="d-block" alt="...">
									{% endif %}
								</div>
								<div class="carousel-caption d-none d-md-block">
									<h5>{{ product.name }}
										-
										{{ product.price }}€</h5>
									<p>{{ product.des|length > 100 ? product.des|slice(0, 100) ~ '...' : product.des }}</p>
								</div>
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>
		</section>
	</main>

{% endblock %}
