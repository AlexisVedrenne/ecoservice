{% extends "basepro.html.twig" %}
{% block title %}Bienvenue sur EcoService
{% endblock %}
{% block body %}

	<div id="Ban">
		<div class="serviceDescription">
			<h4>Nos services</h4>
		</div>
	</div>

	<div class="row mt-5">
		<div class="col">
			<div id="carProduit" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-indicators">
					<button type="button" data-bs-target="#carProduit" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
					<button type="button" data-bs-target="#carProduit" data-bs-slide-to="1" aria-label="Slide 2"></button>
					<button type="button" data-bs-target="#carProduit" data-bs-slide-to="2" aria-label="Slide 3"></button>
				</div>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<div class="container-fluid">
							<div class="row">
								{% for service in services %}
									<div class="col car-img">
										<a class="link-dark" href={{path('service_show',{'id':service.id} )}}>
											<h2 class="text-center">{{service.name}}</h2>
											<img src="{{ asset('uploads/' ~ service.image) }}" class="d-block w-100" alt="...">
											<div class="text-center">
												<h5>Le prix du service :
													{{service.price}}</h5>
												<p>{{service.des}}</p>
												<a type="button" href="{{path('service_show',{'id': service.id})}}" class="btn btn-success">Voir d√©tail</a>
											</div>
										</a>
									</div>
								{% endfor %}

							</div>
						</div>
					</div>

				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carProduit" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carProduit" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
</div></div></div></div>{% include "assets/footer.html.twig" %}
{% endblock %}
