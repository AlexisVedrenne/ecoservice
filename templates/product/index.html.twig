{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Des</th>
                <th>Ref</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>State</th>
                <th>RecyclingIndex</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Image }}</td>
                <td>{{ product.Des }}</td>
                <td>{{ product.Ref }}</td>
                <td>{{ product.Price }}</td>
                <td>{{ product.Quantity }}</td>
                <td>{{ product.State ? 'Yes' : 'No' }}</td>
                <td>{{ product.RecyclingIndex }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
