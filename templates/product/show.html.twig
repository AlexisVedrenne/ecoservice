{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.Image }}</td>
            </tr>
            <tr>
                <th>Des</th>
                <td>{{ product.Des }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ product.Ref }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.Quantity }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ product.State ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>RecyclingIndex</th>
                <td>{{ product.RecyclingIndex }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
