{% extends 'base.html.twig' %}

{% block title %}Order
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="row">
			
			<div class="col-md">
				{% for order in orders %}
					<div class="card mb-3">
						<div class="row g-0">
							
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title">Total : {{ order.total }}€</h5>
									<h5 class="card-title">Quantité{{ order.quantity }}</h5>
									{% for product in order.product %}
										<h5 class="card-title">{{ product.name }}</h5>
										<h5 class="card-title">{{ product.price }}€</h5>
										<img   src="{{ asset('uploads/' ~ product.images[0]) }}">
									{% endfor %}
								</div>	

								
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>{% endblock %}
