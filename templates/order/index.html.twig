{% extends 'base.html.twig' %}

{% block title %}Order
{% endblock %}

{% block body %}

	<div class="container mt-3">
		<div class="row">
		<h1>Mes commandes</h1>
		{% for order in orders %}
		<table class="table table-dark">
  			<thead>
				<tr>
				<th scope="col">Commande passée le: </th>
				<th scope="col">Quantité totale des produits</th>
				<th scope="col">Total</th>
				<th scope="col">Numéro de commande</th>
				</tr>
  			</thead>
			<tbody>
				<tr>
				<th scope="row">{{order.date}}</th>
				<td>{{order.quantity}}</td>
				<td>{{order.total}} € </td>
				<td># {{order.id}}</td>
				</tr>
			</tbody>
		</table>
		
		<table class="table">
			<thead>
				<tr>
				<th scope="col">Image</th>
				<th scope="col">Prix unitaire du produit</th>
				<th scope="col"> Prix Total : {{order.total}} €</th>
				</tr>
  			</thead>
			<tbody>
			{% for product in order.product %}
				<tr>
				<th scope="row"><img  width="200" height="200" src="{{ asset('uploads/' ~ product.images[0]) }}"></th>
				<td>{{product.price}}€</td>
				<th></th>
				</tr>
			{% endfor %}
			</tbody>
		</table>
		
		{% endfor %}
		
	</div>
	
{% endblock %}
