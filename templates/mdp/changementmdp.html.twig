{% extends "base.html.twig" %}
{% block body %}

	<h4 class="text-center mt-3">Changement de votre mot de passe</h4>
	<div class="container col-4 mt-4 bloc-form">
		{{ form_start(form) }}
		<div class="row justify-content-md-center">
			<div class="form-floating mb-3">
				{{ form_widget(form.password,{'attr':{'id':'user_password','class':'form-control','placeholder':'Entr√©e votre mot de passe...','value':''}})}}
				<label class="ms-1">Nouveau mot de passe</label>
			</div>
			<div class="form-floating">
				<input placeholder="Confimer le mot de passe..." class="form-control" type="password" name="confirm_password" id="confirm_password" onkeyup='check2();' required/>
				<label class="ms-1">Confimer le nouveau mot de passe</label>
			</div>
			<div class="text-center mt-2 mb-2" id='message'></div>
			<button id="btnEnregistrer" class="mt-2 btn btn-outline-primary" type="submit" disabled>Valider</button>
		</div>
		{{ form_end(form) }}
	</div>
	<script type="text/javascript" src="{{ asset("js/inscription.js") }}"></script>
{% endblock %}
